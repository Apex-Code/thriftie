<%= simple_form_for @transaction.withdrawal do |f| %>

  <div class="field">
    <%= f.label :withdrawal_amount %><br>
    <%= f.text_field :amount %>
  </div>

  <div class="actions">
    <%= f.label :submit_withdrawal %>
    <%= f.submit %>
  </div>

<% end %>

