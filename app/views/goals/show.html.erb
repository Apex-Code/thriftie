<h1><%= @goal.title %></h1><br>

<h2>Current Balance: <%= number_to_currency(@goal.balance, :unit => "$") %> </h2> <br>

<h2>Target Balance: <%= number_to_currency(@goal.target, :unit => "$") %></h2><br>

<h2>Target Completion Date: <%= @goal.target_date %> </h2>

<%= link_to "Edit", edit_goal_path(@goal) %> | <%= link_to "Delete", goal_path(@goal), method: :delete, data: { confirm: "You can't come back from this.  Are you sure?" }, class: "btn btn-custom" %>
